@model teamcare.business.Models.ResidenceModel
<tr>
	<td>
		<!--begin::User-->
		<div class="d-flex align-items-center">
			<!--begin::Wrapper-->
			<div class="me-5 position-relative">
				<!--begin::Avatar-->
                <div class="symbol symbol-35px symbol-circle">
                    <img src="@(Model.ProfilePhoto !=null ? Model.PrePath+"/"+Model.ProfilePhoto.BlobName+"?width=200" :"../media/avatars/blank.png" )" alt="image" />
                </div>
				<!--end::Avatar-->
			</div>
			<!--end::Wrapper-->
			<!--begin::Info-->
			<div class="d-flex flex-column justify-content-center">
				<a href="@Url.Action("Detail","Residence", new { id = @Model.Id })" class="mb-1 text-gray-800 text-hover-primary">@Model.Name</a>
			</div>
			<!--end::Info-->
		</div>
		<!--end::User-->
	</td>
    <td> @Model.Address</td>
	<td>@Model.Capacity</td>
	<td> @Model.ServiceUsers.Count
	</td>
	<td>
		@Model.Home_Tel_No
	</td>
	<td class="text-end">
		<a href="@Url.Action("Detail","Residence", new { id = @Model.Id })" class="btn btn-light btn-sm">View</a>
	</td>
</tr>