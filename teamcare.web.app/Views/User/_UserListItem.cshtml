@using teamcare.common.Helpers
@model teamcare.business.Models.UserModel
<tr>
    <td>
        <!--begin::User-->
        <div class="d-flex align-items-center">
            <!--begin::Wrapper-->
            <div class="me-5 position-relative">
                <!--begin::Avatar-->
                <div class="symbol symbol-35px symbol-circle">
                    <img src="@(Model.ProfilePhoto !=null ? Model.PrePath+"/"+Model.ProfilePhoto.BlobName+"?width=200" :"../media/avatars/blank.png" )" alt="image" />
                </div>
                <!--end::Avatar-->
            </div>
            <!--end::Wrapper-->
            <!--begin::Info-->
            <div class="d-flex flex-column justify-content-center">
                <a href="@Url.Action("Detail","User", new { id = @Model.Id })" class="mb-1 text-gray-800 text-hover-primary">@Model.Title @Model.FirstName @Model.LastName</a>
            </div>
            <!--end::Info-->
        </div>
        <!--end::User-->
    </td>
    <td> @Model.Email</td>
    <td>@Model.UserRole.GetEnumDescription()</td>
    <td>
        @Model.Mobile_No
    </td>
    <td class="text-end">
        <a href="@Url.Action("Detail","User", new { id = @Model.Id })" class="btn btn-light btn-sm">View</a>
    </td>
</tr>