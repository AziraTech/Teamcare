@using teamcare.web.app.ViewModels
@using teamcare.common.ReferenceData
@{
    var metadata = ViewData[ViewDataKeys.PageMetadata] as PageMetadata;
}

<!--begin::Toolbar-->
<div class="toolbar py-5 py-lg-15" id="kt_toolbar">
	<!--begin::Container-->
	<div id="kt_toolbar_container" class="container d-flex flex-stack flex-wrap">
		<!--begin::Page title-->
		<div class="page-title d-flex flex-column me-3">
            <!--begin::Title-->
			@if (metadata?.Title != null)
			{
			    <h1 class="d-flex text-white fw-bolder my-1 fs-3">@metadata.Title</h1>
			}
            <!--end::Title-->
			@if (metadata?.Breadcrumbs != null && metadata.Breadcrumbs.Any())
			{
			    <partial name="_Breadcrumb" model="metadata.Breadcrumbs"/>
			}
		</div>
		<!--end::Page title-->
		<!--begin::Actions-->
		<div class="d-flex align-items-center py-3 py-md-1">
			<!--begin::Wrapper-->
			<!--end::Wrapper-->
			<!--begin::Button-->
			@if (metadata?.Breadcrumbs != null && metadata.Breadcrumbs.Any())
			{
				if (metadata.Breadcrumbs.Count() > 1)
				{
					if (metadata.Breadcrumbs[1].Url == "")
					{
						<a href="javascript:void(0);" class="btn btn-bg-white btn-active-color-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_create_app" id="kt_toolbar_primary_button">Create</a>
					}
				}
			}
			<!--end::Button-->
		</div>
		<!--end::Actions-->
	</div>
	<!--end::Container-->
</div>
<!--end::Toolbar-->