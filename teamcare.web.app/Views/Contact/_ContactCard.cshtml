@using teamcare.common.Helpers
@*@model teamcare.business.Models.ContactModel*@
@model teamcare.web.app.ViewModels.ServiceUsersViewModel

@foreach (var item in Model.ContactList)
{
    <!--begin::Col-->
    <div class="col-md-3 col-xxl-3">
        <!--begin::Card-->
        <div class="card">
            <!--begin::Card body-->
            <a href="#" class="fs-4 text-gray-800 text-hover-primary fw-bolder mb-0" onclick="ContactDetilas(this)" data-contact-id="@item.Id">
                <div class="card-body d-flex flex-center flex-column pt-12 p-9">
                    <!--begin::Avatar-->
                    <div class="symbol symbol-65px symbol-circle mb-5">
                        <img src="@(item.ProfilePhoto !=null ? item.PrePath+"/"+item.ProfilePhoto.BlobName+"?width=200":"../../media/avatars/blank.png" )" alt="image" />
                    </div>
                    <!--end::Avatar-->
                    <!--begin::Name-->
                    @item.Title.GetEnumDescription() @item.FirstName @item.MiddleName @item.LastName
                    <!--end::Name-->
                    <!--begin::Position-->
                    <div class="fw-bold text-gray-400 mb-6">@item.Relationship</div>
                    <!--end::Position-->
                    @if (item.IsNextOfKin == true)
                    {
                        <span class="badge badge-light-info fs-7 fw-bolder">Next of Kin</span>
                    }
                    @if (item.IsEmergencyContact == true)
                    {
                        <span class="badge badge-light-danger fs-7 fw-bolder">Emergency</span>
                    }
                </div>
            </a>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Col-->
}

