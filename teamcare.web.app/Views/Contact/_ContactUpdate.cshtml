@model teamcare.web.app.ViewModels.ServiceUsersViewModel
<form id="kt_modal_edit_contactform" class="form" novalidate="novalidate">
    <input type="hidden" id="hdnsrvuserid" value="@Model.ServiceUserByID.Id" />
    <div class="d-flex flex-column mb-5 fv-row">
        <!--begin::Label-->
        <label class="form-label fw-bold">Title</label>
        <!--end::Label-->
        <!--begin::Input-->
        <div>
            <select class="form-select form-select-solid" data-kt-select2="true" data-placeholder="Select option" data-allow-clear="true" name="usertitle" id="ddlutitle">
                <option></option>
                @foreach (var group in Model.CreateViewModel.Title)
                {
                    <option value="@group.Value">@group.Text</option>
                }
            </select>
        </div>
        <!--end::Input-->
    </div>
    <div class="d-flex flex-column mb-5 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-5 fw-bold mb-2">
            <span class="required">First Name</span>
            <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Specify User's First Name"></i>
        </label>
        <!--end::Label-->
        <!--begin::Input-->
        <input type="text" class="form-control form-control-lg form-control-solid" name="ufirst_name" placeholder="" id="txtufirstname" />
        <!--end::Input-->
    </div>
    <div class="d-flex flex-column mb-5 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-5 fw-bold mb-2">
            <span class="required">Middle Name</span>
            <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Specify User's Middle Name"></i>
        </label>
        <!--end::Label-->
        <!--begin::Input-->
        <input type="text" class="form-control form-control-lg form-control-solid" name="umiddle_name" placeholder="" id="txtumiddlename" />
        <!--end::Input-->
    </div>
    <div class="d-flex flex-column mb-5 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-5 fw-bold mb-2">
            <span class="required">Last Name</span>
            <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="Specify User's Last Name"></i>
        </label>
        <!--end::Label-->
        <!--begin::Input-->
        <input type="text" class="form-control form-control-lg form-control-solid" name="ulast_name" placeholder="" id="txtulastname" />
        <!--end::Input-->
    </div>

    <!--begin::Input group-->
    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <span class="required">Email</span>
        </label>
        <!--end::Label-->
        <input type="text" class="form-control form-control-solid" placeholder="" name="uemail" id="txtuemail" />
    </div>
    <!--end::Input group-->
    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <span>Address</span>
        </label>
        <!--end::Label-->
        <textarea type="text" class="form-control form-control-solid" name="address" id="txtuaddress"></textarea>
    </div>

    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <span>Mobile No</span>
        </label>
        <!--end::Label-->
        <input type="text" class="form-control form-control-solid" placeholder="" name="mobile" id="txtumobileno" />
    </div>
    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <span>Telephone No</span>
        </label>
        <!--end::Label-->
        <input type="text" class="form-control form-control-solid" placeholder="" name="phone" id="txtutelephoneno" />
    </div>



    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <span class="required">Relationship</span>
        </label>
        <!--end::Label-->
        <select class="form-select form-select-solid" data-kt-select2="true" data-placeholder="Select Role" data-allow-clear="true" name="urelationship" id="ddlurelationship">
            <option></option>
            @foreach (var item in Model.CreateViewModel.Relationship)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <input class="form-check-input" type="checkbox" id="chkuIsNxtKin">
            &nbsp;&nbsp;
            <span>Is Next Of Kin?</span>
        </label>
        <!--end::Label-->
    </div>
    <div class="d-flex flex-column mb-7 fv-row">
        <!--begin::Label-->
        <label class="d-flex align-items-center fs-6 fw-bold form-label mb-2">
            <input class="form-check-input" type="checkbox" id="chkuIsEmergContact">
            &nbsp;&nbsp;
            <span>Is Emergency Contact?</span>
        </label>
        <!--end::Label-->
    </div>
    <div class="fv-row mb-10">
        <!--begin::Dropzone-->
        <div class="dropzone" id="sv-contact-profile-photo_edit">
            <!--begin::Message-->
           
                <!--begin::Message-->
                <div class="dz-message needsclick" id="photodrop">
                    <!--begin::Icon-->
                    <!--begin::Svg Icon | path: icons/duotone/Files/Uploaded-file.svg-->
                    <span class="svg-icon svg-icon-3hx svg-icon-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <polygon points="0 0 24 0 24 24 0 24" />
                                <path d="M5.85714286,2 L13.7364114,2 C14.0910962,2 14.4343066,2.12568431 14.7051108,2.35473959 L19.4686994,6.3839416 C19.8056532,6.66894833 20,7.08787823 20,7.52920201 L20,20.0833333 C20,21.8738751 19.9795521,22 18.1428571,22 L5.85714286,22 C4.02044787,22 4,21.8738751 4,20.0833333 L4,3.91666667 C4,2.12612489 4.02044787,2 5.85714286,2 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                <path d="M8.95128003,13.8153448 L10.9077535,13.8153448 L10.9077535,15.8230161 C10.9077535,16.0991584 11.1316112,16.3230161 11.4077535,16.3230161 L12.4310522,16.3230161 C12.7071946,16.3230161 12.9310522,16.0991584 12.9310522,15.8230161 L12.9310522,13.8153448 L14.8875257,13.8153448 C15.1636681,13.8153448 15.3875257,13.5914871 15.3875257,13.3153448 C15.3875257,13.1970331 15.345572,13.0825545 15.2691225,12.9922598 L12.3009997,9.48659872 C12.1225648,9.27584861 11.8070681,9.24965194 11.596318,9.42808682 C11.5752308,9.44594059 11.5556598,9.46551156 11.5378061,9.48659872 L8.56968321,12.9922598 C8.39124833,13.2030099 8.417445,13.5185067 8.62819511,13.6969416 C8.71848979,13.773391 8.8329684,13.8153448 8.95128003,13.8153448 Z" fill="#000000" />
                            </g>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                    <!--end::Icon-->
                    <!--begin::Info-->
                    <div class="ms-4">
                        <h3 class="dfs-3 fw-bolder text-gray-900 mb-1">Drop file here or click to upload.</h3>
                        <span class="fw-bold fs-4 text-muted">Upload single file at a time</span>
                    </div>
                    <!--end::Info-->
                </div>
           
                <div class="dz-preview dz-file-preview" id="OldProfile" style="display:none;">
                    <div class="dz-image">
                        <img data-dz-thumbnail  id="imgphoto"  alt="Click me to remove the file." />
                    </div>
                    <a class="dz-remove" href="javascript:undefined;" onclick="RemoveProfile()">Remove file</a>
                </div>
            
        </div>
        <!--end::Dropzone-->
    </div>
    <!--begin::Actions-->
    <div class="text-center pt-15">
        <button type="button" id="edit_card_contact_submit" class="btn btn-primary">
            <span class="indicator-label">Submit
                <span class="svg-icon svg-icon-3 ms-2 me-0">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <polygon points="0 0 24 0 24 24 0 24" />
                            <rect fill="#000000" opacity="0.5" transform="translate(8.500000, 12.000000) rotate(-90.000000) translate(-8.500000, -12.000000)" x="7.5" y="7.5" width="2" height="9" rx="1" />
                            <path d="M9.70710318,15.7071045 C9.31657888,16.0976288 8.68341391,16.0976288 8.29288961,15.7071045 C7.90236532,15.3165802 7.90236532,14.6834152 8.29288961,14.2928909 L14.2928896,8.29289093 C14.6714686,7.914312 15.281055,7.90106637 15.675721,8.26284357 L21.675721,13.7628436 C22.08284,14.136036 22.1103429,14.7686034 21.7371505,15.1757223 C21.3639581,15.5828413 20.7313908,15.6103443 20.3242718,15.2371519 L15.0300721,10.3841355 L9.70710318,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.999999, 11.999997) scale(1, -1) rotate(90.000000) translate(-14.999999, -11.999997)" />
                        </g>
                    </svg>
                </span>
            </span>
            <span class="indicator-progress">
                Please wait...
                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
            </span>
        </button>
    </div>
    <!--end::Actions-->
</form>