@model teamcare.web.app.ViewModels.ServiceUsersViewModel
<div class="row mb-7">
    <!--begin::Label-->
    <label class="col-lg-4 fw-bold text-muted">Full Name</label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8">
        <span class="fw-bold fs-6 text-gray-800"> @Model.ServiceUserByID.FirstName @Model.ServiceUserByID.LastName </span>
    </div>
    <!--end::Col-->
</div>
<div class="row mb-7">
    <!--begin::Label-->
    <label class="col-lg-4 fw-bold text-muted">Date Of Birth</label>
    <!--end::Label-->
    <!--begin::Col-->
    <div class="col-lg-8">
        <a href="#" class="fw-bold fs-6 text-gray-800 text-hover-primary">@Model.ServiceUserByID.DateOfBirth.ToString("dd MMM yyyy")</a>
    </div>
    <!--end::Col-->
</div>
