@using teamcare.common.Helpers
@*@model teamcare.business.Models.ServiceUserModel*@
@model teamcare.web.app.ViewModels.ServiceUsersDocumentsViewModel
<!--begin::Col-->
<div class="col-md-6 col-xxl-3">
    <!--begin::Card-->
    @if (Model.ServiceUsersDocument.Count() > 0)
    {
        foreach (var item in Model.ServiceUsersDocument)
        {
        <a href="@Url.Action("Detail", "ServiceUsers", new { id = item.Id })" class="fs-4 text-gray-800 text-hover-primary fw-bolder mb-0">
            <div class="card">
                <!--begin::Card body-->
                <div class="card-body d-flex flex-center flex-column pt-12 p-9">
                    <!--begin::Avatar-->
                    <div class="symbol symbol-65px symbol-circle mb-5">
                        <img src="@(item.DocumentFile != null ? Model.PrePath + "/" + item.DocumentFile.BlobName + "?width=200" : "../../media/avatars/blank.png" )" alt="image" />
                    </div>
                    <!--end::Avatar-->
                    <!--begin::Name-->
                    <div class="flex-row flex-center">
                        @item.Title
                    </div>
                    <!--end::Name-->
                    <!--begin::Position-->
                    @if (item.DateReceived != null)
                    {
                        <div class="fw-bold text-gray-400 mb-6"> @item.DateReceived</div>
                    }
                    <!--end::Position-->
                </div>
            <!--end::Card body-->
            </div>
        <!--end::Card-->
        </a>
        }
    }
</div>
<!--end::Col-->