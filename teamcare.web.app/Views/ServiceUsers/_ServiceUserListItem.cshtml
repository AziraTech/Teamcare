@model teamcare.business.Models.ServiceUserModel
<tr>
	<td>
		<!--begin::User-->
		<div class="d-flex align-items-center">
			<!--begin::Wrapper-->
			<div class="me-5 position-relative">
				<!--begin::Avatar-->
				<div class="symbol symbol-35px symbol-circle">
					<img alt="Pic" src="/media/avatars/150-1.jpg" />
				</div>
				<!--end::Avatar-->
			</div>
			<!--end::Wrapper-->
			<!--begin::Info-->
			<div class="d-flex flex-column justify-content-center">
				<a href="@Url.Action("Detail","ServiceUsers")" class="mb-1 text-gray-800 text-hover-primary">@Model.Title @Model.FirstName @Model.LastName</a>
				<div class="fw-bold fs-6 text-gray-400">@Model.LegalStatus</div>
			</div>
			<!--end::Info-->
		</div>
		<!--end::User-->
	</td>
	<td>@Model.DateOfBirth.ToString("MMM,dd yyyy")</td>
	<td>@Model.Religion</td>
	<td>
		<span class="badge badge-light-info fw-bolder px-4 py-3">@Model.RelationshipToPerson</span>
	</td>
	<td class="text-end">
		<a href="@Url.Action("Detail","ServiceUsers")" class="btn btn-light btn-sm">View</a>
	</td>
</tr>