			<!--end::Modal header-->
			<!--begin::Modal body-->
			<div class="modal-body scroll-y py-lg-10 px-lg-10">
				<partial name="_ServiceUserCreate" />
			</div>
			<!--end::Modal body-->
		</div>
		<!--end::Modal content-->
	</div>
	<!--end::Modal dialog-->
</div>
<!--end::Modal - Create Service Users-->
