@model teamcare.web.app.ViewModels.AssessmentTypeCreateViewModel
<!--begin::Modal header-->
<div class="modal-header">
    <!--begin::Modal title-->
    <h2 id="lblheader"></h2>
    <!--end::Modal title-->
    <!--begin::Close-->
    <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
        <!--begin::Svg Icon | path: icons/duotone/Navigation/Close.svg-->
        <span class="svg-icon svg-icon-1">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000">
                    <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" />
                    <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" />
                </g>
            </svg>
        </span>
        <!--end::Svg Icon-->
    </div>
    <!--end::Close-->
</div>
<!--end::Modal header-->
<!--begin::Modal body-->
<div class="modal-body flex-row-fluid scroll-y py-lg-10 px-lg-10">

    <form id="kt_modal_assettype" class="form" novalidate="novalidate">
        <input type="hidden" id="hdnassettypeid" value="@Model.AssessmentType.Id" />

        <div class="d-flex flex-column mb-5 fv-row">
            <!--begin::Label-->
            <label class="d-flex align-items-center fs-5 fw-bold mb-2">
                <span class="required">TypeName</span>
            </label>
            <!--end::Label-->
            <!--begin::Input-->
            <input type="text" class="form-control form-control-lg form-control-solid" name="name" placeholder="" value="@if (Model.AssessmentType != null) { @Model.AssessmentType.TypeName; }" id="txttypename" />
            <!--end::Input-->
        </div>

        <div class="d-flex flex-column mb-5 fv-row">
            <!--begin::Label-->
            <label class="form-label fw-bold">
                <span class="required"> Options Group</span>
            </label>
            <!--end::Label-->
            <!--begin::Input-->
            <div>
                <select class="form-select form-select-solid ddlselect2" data-kt-select2="true" data-placeholder="Select option" data-allow-clear="true" name="optionsgroup" id="ddloptionsgroup" @(Model.IsOptionsGroupDisable==true?"disabled":"")>
                    <option></option>
                    @foreach (var group in Model.OptionsGroup)
                    {
                        if (Model.AssessmentType != null && group.Value == (int)Model.AssessmentType.OptionsGroup)
                        {
                            <option value="@group.Value" selected>@group.Text</option>
                        }
                        else
                        {
                            <option value="@group.Value">@group.Text</option>
                        }
                    }
                </select>
            </div>
            <!--end::Input-->
        </div>
        <!--begin::Actions-->
        <div class="d-flex flex-stack pt-10">
            <div class="me-2">
                <button type="button" class="btn btn-lg btn-light-primary me-3" data-bs-dismiss="modal">
                    Cancel
                </button>
            </div>
            <div>
                <button type="button" id="typesubmit" class="btn btn-primary right" onclick="saveAssessmentType(this)">
                    <span class="indicator-label">
                        Submit
                        <span class="svg-icon svg-icon-3 ms-2 me-0">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <polygon points="0 0 24 0 24 24 0 24" />
                                    <rect fill="#000000" opacity="0.5" transform="translate(8.500000, 12.000000) rotate(-90.000000) translate(-8.500000, -12.000000)" x="7.5" y="7.5" width="2" height="9" rx="1" />
                                    <path d="M9.70710318,15.7071045 C9.31657888,16.0976288 8.68341391,16.0976288 8.29288961,15.7071045 C7.90236532,15.3165802 7.90236532,14.6834152 8.29288961,14.2928909 L14.2928896,8.29289093 C14.6714686,7.914312 15.281055,7.90106637 15.675721,8.26284357 L21.675721,13.7628436 C22.08284,14.136036 22.1103429,14.7686034 21.7371505,15.1757223 C21.3639581,15.5828413 20.7313908,15.6103443 20.3242718,15.2371519 L15.0300721,10.3841355 L9.70710318,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(14.999999, 11.999997) scale(1, -1) rotate(90.000000) translate(-14.999999, -11.999997)" />
                                </g>
                            </svg>
                        </span>
                    </span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </div>
        <!--end::Actions-->
    </form>
</div>
<!--end::Modal body-->
