@model teamcare.business.Models.ServiceUserLogModel

<tr>
    <td>@Model.ServiceUser.FirstName @Model.ServiceUser.LastName</td>
    <td>@(Model.CreatedOn.ToString("MMM, dd yyyy"))</td>
    <td>
        <!--begin::User-->
        <div class="d-flex align-items-center">
            <!--begin::Wrapper-->
            <!--<div class="me-5 position-relative">-->
            <!--begin::Avatar-->
            <!--<div class="symbol symbol-35px symbol-circle">
                <img src="../media/avatars/blank.png" alt="image" />
            </div>-->
            <!--end::Avatar-->
            <!--</div>-->
            <!--end::Wrapper-->
            <!--begin::Info-->
            <div class="d-flex flex-column justify-content-center">
              @Model?.ActionByAdmin?.FirstName @Model?.ActionByAdmin?.LastName
            </div>
            <!--end::Info-->
        </div>
        <!--end::User-->
    </td>
    <td>
      @Model.LogMessage
    </td>
    <td class="approvestatus">
        @if (Model.IsApproved == false)
        {
            <span class="badge badge-light-info">Pending</span>
        }
        else
        {
            <span class="badge badge-light-success">Approved</span>
        }
    </td>
    <td>
        <div class="me-0">
            <button class="btn btn-sm btn-icon btn-bg-light btn-active-color-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                <i class="bi bi-three-dots fs-3"></i>
            </button>
            <!--begin::Menu 3-->
            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-bold w-200px py-3" data-kt-menu="true" style="">
                <!--begin::Heading-->
                <div class="menu-item px-3">
                    <div class="menu-content text-muted pb-2 px-3 fs-7 text-uppercase">Quick Actions</div>
                </div>
                <!--end::Heading-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3" onclick="IsApproveLog(this)" id="@Model.Id" >Approve Log</a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link flex-stack px-3" onclick="IsInVisibleLog(this)" id="@Model.Id">
                        Hide Log
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu item-->
                <div class="menu-item px-3">
                    <a href="#" class="menu-link px-3">Update Log</a>
                </div>
                <!--end::Menu item-->
            </div>
            <!--end::Menu 3-->
        </div>
    </td>
</tr>
