                        </div>

                        <!--end::Input group-->
                        <!--begin::Actions-->
                        <div class="d-flex justify-content-end">
                            <button type="reset" class="btn btn-sm btn-light btn-active-light-primary me-2" onclick="ResetFilter();" data-kt-menu-dismiss="true">Reset</button>
